
<div class="row">
    <h2>Sample Page</h2>
</div>

<div class="row">
    <div class="col-md-3">
        <fieldset>
            <legend>Sample Form</legend>
            <form id="mainForm" name="MainForm">
                <div class="form-group form-row">
                    <label for="Name" class="col-form-label">Enter your name:</label>
                    <input type="text" id="Name" name="Name" class="form-control" />
                    <label for="Date" class="col-form-label">Enter today's date:</label>
                    <input type="text" id="date" name="date" class="form-control" />
                </div>
                
                <div class="form-row">
                    <input id="submitButton" type="button" value="Submit" class="btn btn-success text-right" />
                </div>
            </form>
        </fieldset>
    </div>
    <div class="col-lg-3">
            <p id="result"></p>
            <label for="resultNoSpaces">The string extension method applied.</label>
            <p id="resultNoSpaces"></p>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-12">
        <p>
            The text on this page is intentionally small as to demonstrate the effect of the overrides.css styles.
            Take a look at the _Layout.cshtml file in order to see the style and script references and the order in which they are applied.
        </p>
        <p>
            Modify the style definitions within the overrides.css file or simply do not reference the stylesheet on the layout/view page.
        </p>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
        $('#submitButton').click(function () {
            var name = $('#Name').val();
            var date = $('#date').val();
            var response = 'You entered ' + name + ' for the name, and ' + date + ' for the date.';
            $('#result').text(response);
            var responseNoSpaces = response.shrink();
            $('#resultNoSpaces').text(responseNoSpaces);
        });
    </script>
    
}

